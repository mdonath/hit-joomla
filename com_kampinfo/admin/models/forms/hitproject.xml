<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
	    	name="hitproject"
			addfieldpath="/administrator/components/com_kampinfo/models/fields"
			label="Algemene info"
	>
		<field	name="id"
				type="hidden"
		/>
		<field	name="jaar"
				type="text"
				label="COM_KAMPINFO_HITPROJECT_JAAR_LABEL"
				description="COM_KAMPINFO_HITPROJECT_JAAR_DESC"
				size="4"
				required="true"
				default=""
				class="input-mini"
		/>
		<field	name="shantiEvenementId"
		    	type="text"
		    	label="Shanti EventId"
		    	description="Evenement Id in Shanti"
		    	size="5"
		    	default=""
		    	class="input-mini"
		/>
		<field
				name="thema"
				type="text"
				label="Thema"
				description="Het motto/thema/leus/spreuk op het naambandje"
				maxlength="255"
				size="30"
				required="true"
				default=""
		/>
		<field	name="inschrijvingStartdatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_START_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_START_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="inschrijvingEinddatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_EIND_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_EIND_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="inschrijvingWijzigenTotDatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_WIJZIGENTOT_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_WIJZIGENTOT_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="inschrijvingKosteloosAnnulerenDatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_KOSTELOOSANNULEREN_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_KOSTELOOSANNULEREN_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="inschrijvingGeenRestitutieDatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_GEENRESTITUTIE_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INSCHRIJVING_GEENRESTITUTIE_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="inningsdatum"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_INNINGSDATUM_LABEL"
				description="COM_KAMPINFO_HITPROJECT_INNINGSDATUM_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="vrijdag"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_VRIJDAG_LABEL"
				description="COM_KAMPINFO_HITPROJECT_VRIJDAG_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
		<field	name="maandag"
				type="calendar"
				label="COM_KAMPINFO_HITPROJECT_MAANDAG_LABEL"
				description="COM_KAMPINFO_HITPROJECT_MAANDAG_DESC"
				format="%d-%m-%Y"
				required="true"
				default=""
				filter="SERVER_UTC"
		/>
	</fieldset>
	
	<fieldset
	    	name="financien"
			addfieldpath="/administrator/components/com_kampinfo/models/fields"
	>
		<field	name="bijdrageProjectteam"
		    	type="number"
		    	label="Bijdrage aan Projectteam (€)"
		    	description="Afdracht van elk kamp ten behoeve van het Projectteam"
		    	size="4"
		    	default="2.00 (€)"
		    	step="0.01"
		    	class="input-mini"
		/>
		<field	name="bijdrageCalamiteitenfonds"
		    	type="number"
		    	label="Bijdrage Calamiteitenfonds (€)"
		    	description="Afdracht door elk kamp ten behoeve van het Calamiteitenfonds"
		    	size="4"
		    	default="1.50"
		    	step="0.01"
		    	class="input-mini"
		/>
		<field	name="bijdrageLSC"
		    	type="number"
		    	label="Bijdrage LSC (€)"
		    	description="Afdracht door elk kamp ten behoeve van inzet van Landelijk Service Centrum"
		    	size="4"
		    	default="1.00"
		    	step="0.01"
		    	class="input-mini"
		/>
		<field	name="percentageReservering"
		    	type="number"
		    	label="Percentage Reservering (%)"
		    	description="Afdracht door elk kamp ten behoeve van het opbouwen van een reserve (de vroegere 10% onvoorzien)"
		    	size="2"
		    	default="10"
		    	max="50"
		    	class="input-mini"
		/>
				
	</fieldset>
</form>