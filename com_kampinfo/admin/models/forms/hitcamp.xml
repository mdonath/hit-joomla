<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        		name="akkoorden"
	>
		<field
				name="akkoordHitKamp"
				type="radio"
				label="COM_KAMPINFO_HITCAMP_AKKOORDKAMP_LABEL"
				description="COM_KAMPINFO_HITCAMP_AKKOORDKAMP_DESC"
				class="inputbox"
				default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
        <field
				name="akkoordHitPlaats"
				type="radio"
				label="COM_KAMPINFO_HITCAMP_AKKOORDPLAATS_LABEL"
				description="COM_KAMPINFO_HITCAMP_AKKOORDPLAATS_DESC"
				class="inputbox"
				default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
    </fieldset>
    
	<fieldset
				name="inschrijvingen"
				addfieldpath="/administrator/components/com_kampinfo/models/fields"
	>
		<field
				name="shantiFormuliernummer"
				type="text"
				label="COM_KAMPINFO_HITCAMP_SHANTI_ID_LABEL"
				description="COM_KAMPINFO_HITCAMP_SHANTI_ID_DESC"
				maxlength="6"
				size="6"
				class="inputbox"
				default=""
		/>
		<field
				name="aantalDeelnemers"
				type="text"
				label="COM_KAMPINFO_HITCAMP_PARTICIPANTCOUNT_LABEL"
				description="COM_KAMPINFO_HITCAMP_PARTICIPANTCOUNT_DESC"
				maxlength="3"
				size="3"
				class="inputbox"
				default=""
		/>
		<field
				name="gereserveerd"
				type="text"
				label="COM_KAMPINFO_HITCAMP_RESERVED_LABEL"
				description="COM_KAMPINFO_HITCAMP_RESERVED_DESC"
				maxlength="3"
				size="3"
				class="inputbox"
				default=""
		/>
		<field
				name="aantalSubgroepen"
				type="text"
				label="Aantal subgroepen"
				description="Het huidige aantal ingeschreven subgroepen"
				maxlength="3"
				size="3"
				class="inputbox"
				default=""
		/>
			
	</fieldset>
	
	<fieldset
				name="hitcamp"
				addfieldpath="/administrator/components/com_kampinfo/models/fields"
	>
		<field
				name="id"
				type="hidden"
		/>
		<field
				name="published"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		    	
		<field
				name="hitsite"
				type="Site"
				label="COM_KAMPINFO_HITCAMP_JAAR_LABEL"
				description="COM_KAMPINFO_HITCAMP_JAAR_DESC"
				class="inputbox"
				required="true"
		/>
		<field
				name="deelnemersnummer"
				type="text"
				label="COM_KAMPINFO_HITCAMP_DEELNEMERSNUMMER_LABEL"
				description="COM_KAMPINFO_HITCAMP_DEELNEMERSNUMMER_DESC"
				maxlength="8"
				size="10"
				class="inputbox"
				default=""
		/>
		<field
				name="naam"
				type="text"
				label="COM_KAMPINFO_HITCAMP_NAAM_LABEL"
				description="COM_KAMPINFO_HITCAMP_NAAM_DESC"
				maxlength="255"
				size="30"
				class="inputbox"
				required="true"
				default=""
		/>
		
		<!-- Nodig omdat de editor teveel ruimte naar boven inneemt en bovenstaande velden overschaduwt -->
		<field type="spacer" name="myspacer" label="" />
		<field
				name="doelstelling"
				type="editor"
				label="COM_KAMPINFO_HITCAMP_DOELSTELLING_LABEL"
				description="COM_KAMPINFO_HITCAMP_DOELSTELLING_DESC"
				width="300"
				class="inputbox"
				filter="safehtml"
		/>
		<field
				name="startDatumTijd"
				type="calendar"
				label="COM_KAMPINFO_HITCAMP_STARTDATETIME_LABEL"
				description="COM_KAMPINFO_HITCAMP_STARTDATETIME_DESC"
				size="20"
				maxlength="19"
				class="inputbox"
				required="true"
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
		/>
		<field
				name="eindDatumTijd"
				type="calendar"
				label="COM_KAMPINFO_HITCAMP_EINDDATETIME_LABEL"
				description="COM_KAMPINFO_HITCAMP_EINDDATETIME_DESC"
				size="20"
				class="inputbox"
				required="true"
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
		/>
		<field
				name="deelnamekosten"
				type="text"
				label="COM_KAMPINFO_HITCAMP_PRIJS_LABEL"
				description="COM_KAMPINFO_HITCAMP_PRIJS_DESC"
				size="3"
				maxlength="3"
				class="inputbox"
				default=""
		/>
		<field
				name="minimumLeeftijd"
				type="text"
				label="COM_KAMPINFO_HITCAMP_LEEFTIJD_MIN_LABEL"
				description="COM_KAMPINFO_HITCAMP_LEEFTIJD_MIN_DESC"
				size="3"
				maxlength="3"
				class="inputbox"
				default="8"
		/>
		<field
				name="maximumLeeftijd"
				type="text"
				label="COM_KAMPINFO_HITCAMP_LEEFTIJD_MAX_LABEL"
				description="COM_KAMPINFO_HITCAMP_LEEFTIJD_MAX_DESC"
				size="3"
				maxlength="3"
				class="inputbox"
				default="88"
		/>

		<field
				name="subgroepsamenstellingMinimum"
				type="text"
				label="COM_KAMPINFO_HITCAMP_SUBGROEP_MIN_LABEL"
				description="COM_KAMPINFO_HITCAMP_SUBGROEP_DESC"
				size="3"
				maxlength="2"
				class="inputbox"
		/>
		<field
				name="subgroepsamenstellingMaximum"
				type="text"
				label="COM_KAMPINFO_HITCAMP_SUBGROEP_MAX_LABEL"
				description="COM_KAMPINFO_HITCAMP_SUBGROEP_DESC"
				size="3"
				maxlength="2"
				class="inputbox"
		/>
		<field
				name="subgroepsamenstellingExtra"
				type="text"
				label="COM_KAMPINFO_HITCAMP_SUBGROEP_EXTRA_LABEL"
				description="COM_KAMPINFO_HITCAMP_SUBGROEP_EXTRA_DESC"
				size="3"
				maxlength="1"
				class="inputbox"
		/>
		
		<!-- AANTAL DEELNEMERS -->
		<field
				name="minimumAantalDeelnemers"
				type="text"
				label="Minimum aantal deelnemers"
				description=""
				size="3"
				maxlength="2"
				class="inputbox"
		/>
		<field
				name="maximumAantalDeelnemers"
				type="text"
				label="Maximum aantal deelnemers"
				description=""
				size="3"
				maxlength="3"
				class="inputbox"
		/>
		<field
				name="maximumAantalSubgroepjes"
				type="text"
				label="Maximum aantal subgroepjes"
				description=""
				size="3"
				maxlength="2"
				class="inputbox"
		/>
		<field
				name="maximumAantalUitEenGroep"
				type="text"
				label="Maximum aantal uit één groep"
				description=""
				size="3"
				maxlength="3"
				class="inputbox"
		/>
		<field
				name="margeAantalDagenTeJong"
				type="text"
				label="Marge te jong"
				description=""
				size="3"
				maxlength="2"
				class="inputbox"
				default="90"
		/>
		<field
				name="margeAantalDagenTeOud"
				type="text"
				label="Marge te oud"
				description=""
				size="3"
				maxlength="2"
				class="inputbox"
				default="90"
		/>
		<field
				name="redenAfwijkingMarge"
				type="text"
				label="Reden afwijking marge"
				description=""
				size="30"
				maxlength="255"
				class="inputbox"
		/>
		
	</fieldset>
	
<!-- WEBSITE -->
	
	<fieldset
				name="siteEnCourant"
				addfieldpath="/administrator/components/com_kampinfo/models/fields"
	>
		<field
				name="titeltekst"
				type="text"
				label="Titeltekst"
				description="Titeltekst"
				maxlength="255"
				size="30"
				class="inputbox"
				required="true"
				default=""
		/>
		<!-- Nodig omdat de editor teveel ruimte naar boven inneemt en bovenstaande velden overschaduwt -->
		<field type="spacer" name="myspacer" label="" />
		<field
				name="hitCourantTekst"
				type="editor"
				label="COM_KAMPINFO_HITCAMP_HITCOURANTTEKST_LABEL"
				description="COM_KAMPINFO_HITCAMP_HITCOURANTTEKST_DESC"
				width="300"
				class="inputbox"
				filter="safehtml"
		/>
		<!-- Nodig omdat de editor teveel ruimte naar boven inneemt en bovenstaande velden overschaduwt -->
		<field type="spacer" name="myspacerWebsiteTekst1" label="" />
		<field type="spacer" name="myspacerWebsiteTekst2" label="" />
				<field
				name="websiteTekst"
				type="editor"
				label="COM_KAMPINFO_HITCAMP_WEBSITETEKST_LABEL"
				description="COM_KAMPINFO_HITCAMP_WEBSITETEKST_DESC"
				width="300"
				class="inputbox"
				filter="safehtml"
		/>
		<field
				name="websiteAdres"
				type="text"
				label="Website adres"
				description=""
				size="50"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="webadresFoto1"
				type="text"
				label="Foto 1"
				description="Foto 1"
				size="50"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="webadresFoto2"
				type="text"
				label="Foto 2"
				description="Foto 2"
				size="50"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="webadresFoto3"
				type="text"
				label="Foto 3"
				description="Foto 3"
				size="50"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="websiteContactTelefoonnummer"
				type="text"
				label="Website contact Tel."
				description=""
				size="30"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="websiteContactEmailadres"
				type="text"
				label="Website contact Email"
				description=""
				size="30"
				maxlength="255"
				class="inputbox"
		/>
		<field
				name="websiteContactPersoon"
				type="text"
				label="Website contactpersoon"
				description=""
				size="30"
				maxlength="255"
				class="inputbox"
		/>

		

		<field type="spacer" name="myspacerIcoontjes" label="" />
		<field
				name="icoontjes"
				type="Icon"
				label="Icoontjes"
				description="Dit zijn de icoontjes"
				class="inputbox"
		/>
		
		<field
				name="activiteitengebieden"
				type="Activityarea"
				label="Activiteitengebieden"
				description="Dit zijn de activiteitengebieden"
				class="inputbox"
		/>
		<field
				name="doelgroepen"
				type="Targetgroup"
				label="Doelgroepen"
				description="Dit zijn de doelgroepen"
				class="inputbox"
		/>

	</fieldset>
	
	<fieldset
        		name="helpdesk"
	>
		 <field type="spacer" name="myspacerHelpdeskOpmerkingen" label="" />
				<field
				name="helpdeskOpmerkingen"
				type="editor"
				label="Opmerkingen"
				description="Hier kun je opmerkingen voor de helpdesk kwijt"
				width="300"
				class="inputbox"
				filter="safehtml"
		/>
		<field
				name="helpdeskOverschrijdingAantal"
				type="text"
				label="Overschrijding aantal"
				description="Hoeveel extra deelnemers mag de Helpdesk laten inschrijven voordat er contact wordt opgenomen"
				size="3"
				maxlength="3"
				class="inputbox"
				default="0"
		/>
		 
		<field
				name="helpdeskOverschrijdingLeeftijd"
				type="radio"
				label="Mogen er oudere of jongere deelnemers ingeschreven worden"
				description="COM_KAMPINFO_HITCAMP_HELPDESKOVERSCHRIJDINGLFT_DESC"
				class="inputbox"
				default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
        <field
				name="helpdeskTeJongMagAantal"
				type="text"
				label="Hoeveel te jong"
				description="Hoeveel deelnemers die te jong zijn mag de Helpdesk laten inschrijven voordat er contact wordt opgenomen"
				size="3"
				maxlength="3"
				class="inputbox"
				default="0"
		/>
        <field
				name="helpdeskTeOudMagAantal"
				type="text"
				label="Hoeveel te oud"
				description="Hoeveel deelnemers die te oud zijn mag de Helpdesk laten inschrijven voordat er contact wordt opgenomen"
				size="3"
				maxlength="3"
				class="inputbox"
				default="0"
		/>
	</fieldset>

	<fieldset name="accesscontrol">
		<field name="asset_id" type="hidden" filter="unset" />
		<field name="rules"
				type="rules"
				label="JFIELD_RULES_LABEL"
				translate_label="false"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_kampinfo"
				section="hitcamp"
		/>
	</fieldset>
</form>