	            name="search"
	            type="text"
	            label="ZOEKEN"
	            hint="JSEARCH_FILTER"
        />
		
		<field
				name="jaar"
	            type="project"
	            label="COM_KAMPINFO_SELECT_HITPROJECT"
	            description="COM_CONTENT_LIST_LIMIT_DESC"
	            onchange="this.form.submit();"
