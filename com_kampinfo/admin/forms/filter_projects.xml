<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HITScoutingNL\Component\KampInfo\Administrator\Field">
	<fields name="filter">
		<field
				name="search"
				type="text"
				inputmode="search"
				label="ZOEKEN"
				hint="JSEARCH_FILTER"
        />
	</fields>
	<fields name="list">
		<field
				name="fullordering"
				type="list"
				label="JGLOBAL_SORT_BY"
				class="js-select-submit-on-change"
				default="p.jaar DESC"
				validate="options"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="p.jaar ASC">Jaar oplopend</option>
			<option value="p.jaar DESC">Jaar aflopend</option>
			<option value="p.id ASC">Id oplopend</option>
			<option value="p.id DESC">Id aflopend</option>
		</field>
        <field
	            name="limit"
	            type="limitbox"
	            label="JGLOBAL_LIST_LIMIT"
	            default="25"
	            class="js-select-submit-on-change"
        />
    </fields>
</form>